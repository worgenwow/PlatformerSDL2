{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "buildSDL2",
			"command": "g++.exe",
			"args": [
				"-g",
				"src\\*.cpp",
				"-o",
				"build\\game.exe",
				"-ID:\\librarySDL2\\x86_64\\include",
				"-I${workspaceFolder}/include",
				"-LD:\\librarySDL2\\x86_64\\lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image",
				"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "debugSDL2",
			"command": "g++.exe",
			"args": [
				"-g",
				"src\\*.cpp",
				"-o",
				"build\\game.exe",
				"-ID:\\librarySDL2\\x86_64\\include",
				"-I${workspaceFolder}/include",
				"-LD:\\librarySDL2\\x86_64\\lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image",
				"-mwindows",
				"-mconsole"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}